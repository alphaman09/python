
employee_no=int(input("ENTER THE employee_no."))
employee_name=str(input("ENTER THE emplpyee_name"))
employee_job=str(input("ENTER THE employee_job"))
project_salary=1500000
bonus_project=0.07*project_salary
total_project_salary=bonus_project+project_salary
execute_salary=1000000
bonus_execute=0.05*1000000
total_execute_salary=bonus_execute+execute_salary
execute_asst_salary=800000
bonus_execute_asst=0.03*800000
total_execute_asst_salary=bonus_execute_asst+execute_asst_salary
if(employee_job=="project officer"):
               print("YOUR TOTAL SALARY=",total_project_salary)
elif(employee_job=="executive engineer"):
               print("YOUR TOTAL EXECUTE SALARY",total_execute_salary)
elif(employee_job=="executive asst"):
               print("YOUR TOTAL SALARY",total_execute_asst_salary)
else:
               print("NO SUCH JOB")
    
